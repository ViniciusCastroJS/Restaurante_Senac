@model restaurante_senac_asp.mvc.Models.ItemPedido;


@{ViewData["Title"] = "Formulário de Pedido";}


<form method="post">
    <div class="form-group">
        <label asp-for="descricao" class="control-label">descrição:</label>
        <input asp-for="descricao" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="valor_unitario" class="control-label">valor Unitário:</label>
        <input asp-for="valor_unitario" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="quantidade" class="control-label">quantidade:</label>
        <input asp-for="quantidade" class="form-control" />
    </div>

    <button type="submit">Enviar</button>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}